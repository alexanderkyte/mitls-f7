# -*- Makefile -*-

# --------------------------------------------------------------------
arch = $(shell uname)
TOP  = $(dir $(lastword $(MAKEFILE_LIST)))

ifneq ($(findstring CYGWIN,$(arch)),)
include $(TOP)/Makefile.config.cygwin
else
include $(TOP)/Makefile.config.unix
endif

# --------------------------------------------------------------------
fslibs  = \
	FSharp.PowerPack.dll \
	FSharp.PowerPack.Compatibility.dll \
	System.Xml.dll \
	System.Security.dll

csflags = /nologo /lib:../bin
fsflags = -d fs -g --mlcompatibility $(addprefix -r ,$(fslibs)) --nologo
