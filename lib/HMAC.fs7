module HMAC

(* Core HMAC algorithms; trusted only on their tag lengths *)

open Bytes
open TLSConstants

type key = bytes
type data = bytes
type mac = bytes

val MAC:       
  a:macAlg -> k:key {Length(k)=MacSize(a)} -> 
  data -> t:mac {Length(t)=MacSize(a)} 
val MACVERIFY: 
  a:macAlg -> k:key {Length(k)=MacSize(a)} -> 
  data -> t:mac {Length(k)=MacSize(a)} -> bool
