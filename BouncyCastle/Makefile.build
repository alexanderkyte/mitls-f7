# -*- Makefile -*-

# --------------------------------------------------------------------
include ../Makefile.config

target    = ../bin/BouncyCastle.dll
mycsflags = /nowarn:0414 /nowarn:0219

# --------------------------------------------------------------------
.PHONY: all dist

all: $(target)

dist:
	find bzip2 src -type f -name '*.cs' -print0 | \
		tar --null -T - -cf - | \
		tar -C '$(distdir)' -xof -

$(target): $(srcs)
	$(csc) $(csflags) $(mycsflags) /target:library /out:$@ /recurse:*.cs
