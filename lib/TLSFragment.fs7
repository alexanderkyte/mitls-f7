module TLSFragment

open Bytes
open TLSInfo
open TLSConstants

private type (;ki:epoch) prehistory = {
  handshake: (;ki) HSFragment.stream;
  alert: (;ki) HSFragment.stream; 
  ccs: (;ki) HSFragment.stream; 
  appdata: (;ki) DataStream.stream
}
predicate TLSHistory of ki:epoch * (;ki) prehistory
type (;ki:epoch) history = p:(;ki) prehistory{TLSHistory(ki,p)}

predicate EmptyHistory of ki:epoch * (;ki)history
val emptyHistory: ki:epoch -> h:(;ki)history{EmptyHistory(ki,h)}

function val HandshakeHistory: e:epoch * (;e)history -> 'a //(;e)HSFragment.stream
function val AppDataHistory: e:epoch * (;e)history -> 'a //(;e)DataStream.stream
function val AlertHistory: e:epoch * (;e) history -> 'a // (;e)HSFragment.stream
function val CCSHistory: e:epoch * (;e) history -> 'a//(;e)HSFragment.stream

private definition !e,h. HandshakeHistory(e,h) = h.handshake
private definition !e,h. AlertHistory(e,h) = h.alert
private definition !e,h. CCSHistory(e,h) = h.ccs
private definition !e,h. AppDataHistory(e,h) = h.appdata

predicate val TLSFragment : ki:epoch * ct:ContentType * h:(;ki) history * rg:range * 'a  -> bool//d:(;ki,rg) Fragment.fragment
assume !ki,ct,h,rg,d.
  TLSFragment(ki,ct,h,rg,d) <=> (
    (ct = TLSConstants.Handshake          /\ HSFragment.Fragment(ki,HandshakeHistory(ki,h),rg,d) ) \/
    (ct = TLSConstants.Change_cipher_spec /\ HSFragment.Fragment(ki,CCSHistory(ki,h),rg,d) ) \/
    (ct = TLSConstants.Alert              /\ HSFragment.Fragment(ki,AlertHistory(ki,h),rg,d) ) \/
    (ct = TLSConstants.Application_data   /\ AppFragment.Fragment(ki,AppDataHistory(ki,h),rg,d))
  )


type (;ki:epoch,ct:ContentType,h:(;ki) history,rg:range) fragment =
    | FHandshake of f:(;ki,rg)HSFragment.fragment{ct=TLSConstants.Handshake  /\ (Auth(ki) => TLSFragment(ki,ct,h,rg,f))}
    | FCCS       of f:(;ki,rg)HSFragment.fragment{ct=TLSConstants.Change_cipher_spec  /\ (Auth(ki) => TLSFragment(ki,ct,h,rg,f))}
    | FAlert     of f:(;ki,rg)HSFragment.fragment{ct=TLSConstants.Alert  /\ (Auth(ki) => TLSFragment(ki,ct,h,rg,f))}
    | FAppData   of f:(;ki,rg)AppFragment.fragment{ct=TLSConstants.Application_data  /\ (Auth(ki) => TLSFragment(ki,ct,h,rg,f))}

function val TLSContents: 'a -> 'b // TLSFragment -> Fragment
assume !f. TLSContents(FHandshake(f)) = f
assume !f. TLSContents(FCCS(f)) = f
assume !f. TLSContents(FAlert(f)) = f
assume !f. TLSContents(FAppData(f)) = f

function val ExtendHistory: ki:epoch * ct:ContentType * ss:(;ki)history * r:range * 'a (* (;ki,r)Fragment.fragment *) -> 'a 

val addToHistory: ki:epoch -> ct:ContentType -> ss:(;ki)history -> r:range ->
	f:(;ki,ct,ss,r)fragment ->  
        ss':(;ki)history{ss' = ExtendHistory(ki,ct,ss,r,TLSContents(f))}


val fragmentRepr: ki:epoch{not Safe(ki)} -> ct:ContentType -> h: (;ki) history -> rg:range ->
  (;ki,ct,h,rg)fragment -> bytes

val fragmentPlain: ki:epoch{not Auth(ki)} -> ct:ContentType -> h: (;ki) history -> rg:range ->
  (;rg)rbytes -> (;ki,ct,h,rg)fragment 

private assume !ki,h. EmptyHistory(ki,h) <=>
	( HSFragment.EmptyStream(ki,h.handshake) /\ HSFragment.EmptyStream(ki,h.alert) /\
	  HSFragment.EmptyStream(ki,h.ccs)       /\ DataStream.EmptyStream(ki,h.appdata) )
private assume !ki,h,h'. EmptyHistory(ki,h) /\ EmptyHistory(ki,h') => h = h'

private assume !ki,ct,h,r,d,h'. ExtendHistory(ki,ct,h,r,d) = h' <=>
    ((ct = TLSConstants.Handshake /\ h' = 
	 { handshake = HSFragment.Extend(ki,h.handshake,r,d);
	   alert = h.alert;
	   ccs = h.ccs;
	   appdata = h.appdata}) \/
     (ct = TLSConstants.Alert /\ h' = 
	 { handshake = h.handshake;
	   alert = HSFragment.Extend(ki,h.alert,r,d);
	   ccs = h.ccs;
	   appdata = h.appdata}) \/
     (ct = TLSConstants.Change_cipher_spec /\ h' = 
	 { handshake = h.handshake;
	   alert = h.alert;
	   ccs = HSFragment.Extend(ki,h.ccs,r,d);
	   appdata = h.appdata}) \/
     (ct = TLSConstants.Application_data /\ h' = 
	 { handshake = h.handshake;
	   alert = h.alert;
	   ccs = h.ccs;
	   appdata = AppFragment.Extend(ki,h.appdata,r,d)}))

private assume !ki,h,r,d. ExtendHistory(ki,TLSConstants.Handshake,h,r,d) = 
	 { handshake = HSFragment.Extend(ki,h.handshake,r,d);
	   alert = h.alert;
	   ccs = h.ccs;
	   appdata = h.appdata}
private assume !ki,h,r,d. ExtendHistory(ki,TLSConstants.Alert,h,r,d) = 
	 { handshake = h.handshake;
	   alert = HSFragment.Extend(ki,h.alert,r,d);
	   ccs = h.ccs;
	   appdata = h.appdata}
private assume !ki,h,r,d. ExtendHistory(ki,TLSConstants.Change_cipher_spec,h,r,d) = 
	 { handshake = h.handshake;
	   alert = h.alert;
	   ccs = HSFragment.Extend(ki,h.ccs,r,d);
	   appdata = h.appdata}
private assume !ki,h,r,d. ExtendHistory(ki,TLSConstants.Application_data,h,r,d) = 
	 { handshake = h.handshake;
	   alert = h.alert;
	   ccs = h.ccs;
	   appdata = AppFragment.Extend(ki,h.appdata,r,d)}

ask !ki,h,h',r,d. h' = ExtendHistory(ki,TLSConstants.Handshake,h,r,d) =>
	( HandshakeHistory(ki,h') = HSFragment.Extend(ki,HandshakeHistory(ki,h),r,d) /\
	  AlertHistory(ki,h') = AlertHistory(ki,h) /\
	  CCSHistory(ki,h') = CCSHistory(ki,h) /\
	  AppDataHistory(ki,h') = AppDataHistory(ki,h))
ask !ki,h,h',r,d. h' = ExtendHistory(ki,TLSConstants.Alert,h,r,d) =>
	( AlertHistory(ki,h') = HSFragment.Extend(ki,AlertHistory(ki,h),r,d) /\
	  HandshakeHistory(ki,h') = HandshakeHistory(ki,h) /\
	  CCSHistory(ki,h') = CCSHistory(ki,h) /\
	  AppDataHistory(ki,h') = AppDataHistory(ki,h))
ask !ki,h,h',r,d. h' = ExtendHistory(ki,TLSConstants.Change_cipher_spec,h,r,d) =>
	( CCSHistory(ki,h') = HSFragment.Extend(ki,CCSHistory(ki,h),r,d) /\
	  AlertHistory(ki,h') = AlertHistory(ki,h) /\
	  HandshakeHistory(ki,h') = HandshakeHistory(ki,h) /\
	  AppDataHistory(ki,h') = AppDataHistory(ki,h))

ask !ki,h,h',r,d. h' = ExtendHistory(ki,TLSConstants.Application_data,h,r,d) =>
	( AppDataHistory(ki,h') = AppFragment.Extend(ki,AppDataHistory(ki,h),r,d) /\
	  AlertHistory(ki,h') = AlertHistory(ki,h) /\
	  CCSHistory(ki,h') = CCSHistory(ki,h) /\
	  HandshakeHistory(ki,h') = HandshakeHistory(ki,h))

ask !e,h. EmptyHistory(e,h) => HSFragment.EmptyStream(e,HandshakeHistory(e,h))
ask !e,h. EmptyHistory(e,h) => HSFragment.EmptyStream(e,AlertHistory(e,h))
ask !e,h. EmptyHistory(e,h) => HSFragment.EmptyStream(e,CCSHistory(e,h))
ask !e,h. EmptyHistory(e,h) => DataStream.EmptyStream(e,AppDataHistory(e,h))

private assume !ki,h. TLSHistory(ki,h)

