module Tcp

open Bytes
open Error

type NetworkStream
type TcpListener

(* Server side *)

val listen: string -> int -> TcpListener
val accept: TcpListener -> NetworkStream
val stop: TcpListener -> unit

(* Client side *)

val connect: string -> int -> NetworkStream

(* Input/Output *)

val dataAvailable: NetworkStream -> r:bool Result{!y,z. r = Error(y,z) => y = Tcp /\ z = Internal}
val read: NetworkStream -> l:int ->
		r:bytes Result{(!b. r = Correct(b) => Lengths(b) = l)
		/\ (!y,z. r = Error(y,z) => y = Tcp /\ z = Internal)}
val write: NetworkStream -> bytes -> r:unit Result{!y,z. r = Error(y,z) => y = Tcp /\ z = Internal}
val close: NetworkStream -> unit
